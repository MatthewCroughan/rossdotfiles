[colors]
background=#06151a
foreground=#b5bdc2
disabled=#63686e
label=#62727b

[bar/main-monitor]
monitor=LVDS-0
background=${colors.background}
foreground=${colors.foreground}
border-size=0
width=100%
height=27
enable-ipc=true
font-0=DejaVuSansMono Nerd Font:pixelsize=10;1
module-margin=1
modules-left=date battery pulseaudio
modules-center=i3
modules-right=cpu memory swap

[module/date]
type=internal/date
interval=1.0
date=%Y-%m-%d%
time=%I:%M %p
time-alt=%H:%M
label=%time%

[module/battery]
type=internal/battery
time-format=%H:%M
label-charging="CHR%{F-} %percentage%%"
label-charging-foreground=${colors.label}
label-discharging="BAT%{F-} %percentage%%"
label-discharging-foreground=${colors.label}
label-full="BAT%{F-} %percentage%%"
label-full-foreground=${colors.label}

[module/pulseaudio]
type=internal/pulseaudio
format-volume=<label-volume>
label-muted="Muted"
label-muted-foreground=${colors.disabled}
label-volume="VOL%{F-} %percentage%%"
label-volume-foreground=${colors.label}

[module/i3]
type=internal/i3
pin-workspaces=true
strip-wsnumbers=true
enable-click=true
enable-scroll=true
wrapping-scroll=true
reverse-scroll=false
format=<label-state> <label-mode>
label-mode=%mode%
label-mode-foreground=${colors.foreground}
label-focused=%name%
label-focused-foreground=${colors.foreground}
label-unfocused=%name%
label-unfocused-foreground=${colors.disabled}
label-separator=" "
label-separator-padding=1

[module/cpu]
type=internal/cpu
format=<label>
label="CPU%{F-} %percentage-cores%"
label-foreground=${colors.label}

[module/memory]
type=internal/memory
format=<label>
label="MEM%{F-} %percentage_used%%"
label-foreground=${colors.label}

[module/swap]
type=internal/memory
format=<label>
label="SWAP%{F-} %percentage_swap_used%%"
label-foreground=${colors.label}

# vim:ft=dosini
